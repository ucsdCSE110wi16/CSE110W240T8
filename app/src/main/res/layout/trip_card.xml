<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trip_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:foreground="?android:selectableItemBackground"
    card_view:cardBackgroundColor="@color/defaultTripCardColor"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/trip_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Backpacking in Arizona"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/trip_card_private_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/trip_card_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/trip_card_name"
            android:src="@drawable/ic_lock" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/trip_card_name"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="4dp"
            android:background="@drawable/divider_faded" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/trip_card_transportation_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/divider"
            android:layout_marginBottom="@dimen/list_item_padding_vertical"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_flight" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/trip_card_cities"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/trip_card_transportation_icon"
            android:layout_alignTop="@+id/trip_card_transportation_icon"
            android:layout_toEndOf="@+id/trip_card_transportation_icon"
            android:layout_toRightOf="@+id/trip_card_transportation_icon"
            android:gravity="center"
            android:text="San Diego -> Phoenix" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/trip_card_cal_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/trip_card_transportation_icon"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_date_range_black_24dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/trip_card_date_range"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/trip_card_cal_icon"
            android:layout_alignTop="@id/trip_card_cal_icon"
            android:layout_toEndOf="@+id/trip_card_cal_icon"
            android:layout_toRightOf="@+id/trip_card_cal_icon"
            android:gravity="center_vertical"
            android:text="Mon 28 March - Fri 1 April" />

    </RelativeLayout>
</android.support.v7.widget.CardView>